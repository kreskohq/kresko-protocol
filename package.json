{
  "name": "@kreskolabs/protocol",
  "private": true,
  "description": "Kresko Protocol Smart Contracts",
  "version": "1.0.0",
  "license": "BUSL-1.1",
  "author": {
    "name": "Kresko Labs",
    "url": "https://kresko.fi"
  },
  "types": "globals.d.ts",
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "clean": "hardhat clean && forge clean",
    "recompile": "hardhat clean && hardhat compile",
    "compile": "TS_NODE_TRANSPILE_ONLY=1 hardhat compile",
    "compile:forge": "forge build && typechain --input-dir forge/artifacts './forge/artifacts/**/*.json' --out-dir types/forged --target=ethers-v5 --always-generate-overloads --discriminate-types",
    "deploy": "hardhat deploy",
    "coverage": "HARDHAT_DEPLOY_FIXTURE=true CI=true hardhat coverage",
    "test": "TEST=true hardhat test --deploy-fixture",
    "test:ci": "TEST=true CI=true hardhat test --deploy-fixture",
    "typechain": "hardhat typechain",
    "local": "hardhat node --tags local --watch",
    "lint": "npm run lint:sol && npm run lint:ts && npm run prettier:check",
    "lint:sol": "TS_NODE_TRANSPILE_ONLY=1 solhint --config .solhint.json --max-warnings 0 './src/contracts/**/**/*.sol'",
    "lint:ts": "eslint src --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier src --plugin=prettier-plugin-solidity --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier src --plugin=prettier-plugin-solidity --config ./.prettierrc --check \"**/*.{js,json,md,sol,ts}\"",
    "postinstall": "husky install",
    "c:publish": "cd packages/contracts && pnpm build && pnpm publish --no-git-checks",
    "c:export": "hardhat export --export-all packages/contracts/src/deployments.ts",
    "subgraph": "hardhat misc:write-subgraph",
    "kr:add-facet": "hardhat facet:add",
    "kr:replace-facet": "hardhat facet:replace",
    "kr:remove-facet": "hardhat facet:remove",
    "fork:test": "FORKING=opgoerli hardhat test --grep Forking",
    "fork:deploy": "FORKING=opgoerli hardhat deploy",
    "fork:sandbox": "FORKING=opgoerli hardhat deploy --tags sandbox"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@defi-wonderland/smock": "^2.3.5",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@kreskolabs/configs": "^12.10.1",
    "@kreskolabs/lib": "^11.9.1",
    "@kreskolabs/viem-redstone-connector": "^0.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-foundry": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@redstone-finance/evm-connector": "^0.0.22",
    "@swc/core": "1.3.82",
    "@swc/helpers": "^0.5.2",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "ethers": "^5.7.2",
    "hardhat": "2.17.1",
    "hardhat-deploy": "^0.11.29",
    "hardhat-deploy-ethers": "0.4.0-next.1",
    "hardhat-diamond-abi": "^3.0.1",
    "hardhat-interface-generator": "^0.0.6",
    "hardhat-watcher": "^2.5.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "1.1.3",
    "redstone-protocol": "^1.0.5",
    "solhint": "3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typechain": "^8.1.1",
    "typescript": "5.2.2",
    "viem": "^1.13.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "foundry",
    "smart-contracts",
    "solidity"
  ]
}

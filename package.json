{
  "name": "@kreskolabs/protocol",
  "private": true,
  "description": "Kresko Protocol Smart Contracts",
  "version": "1.0.0",
  "license": "BUSL-1.1",
  "author": {
    "name": "Kresko Labs",
    "url": "https://kresko.fi"
  },
  "types": "./types/globals.d.ts",
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "dev:stop": "just kill",
    "dev": "just local",
    "clean": "hardhat clean && forge clean",
    "recompile": "hardhat clean && hardhat compile",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "test": "forge test && TEST=true hardhat test --deploy-fixture",
    "test:ci": "TEST=true CI=true hardhat test --deploy-fixture",
    "local": "hardhat node --tags local --watch",
    "lint": "pnpm lint:sol && pnpm style:sol && pnpm lint:ts",
    "lint:ts": "biome check .",
    "lint:sol": "TS_NODE_TRANSPILE_ONLY=1 solhint --config .solhint.json --max-warnings 0 './src/contracts/**/**/*.sol'",
    "style:sol": "prettier src/contracts/**/*.sol --check",
    "format": "pnpm format:ts && pnpm format:sol",
    "format:ts": "biome format . --write",
    "format:sol": "prettier src/contracts/**/*.sol --write",
    "kr:add-facet": "hardhat facet:add",
    "kr:replace-facet": "hardhat facet:replace",
    "kr:remove-facet": "hardhat facet:remove",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.1",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@defi-wonderland/smock": "^2.3.5",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/abstract-provider": "^5",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@kreskolabs/viem-redstone-connector": "^0.5.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-foundry": "1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@redstone-finance/evm-connector": "^0.0.22",
    "@swc/core": "1.3.82",
    "@swc/helpers": "^0.5.2",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^18.18.0",
    "@types/prettier": "2.7.3",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "2.17.1",
    "hardhat-deploy": "0.11.29",
    "hardhat-deploy-ethers": "0.4.0-next.1",
    "hardhat-diamond-abi": "3.0.1",
    "hardhat-interface-generator": "^0.0.6",
    "husky": "^6.0.0",
    "lint-staged": "^11.2.6",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "redstone-protocol": "^1.0.5",
    "solhint": "3.6.2",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typechain": "^8.1.1",
    "typescript": "5.2.2",
    "viem": "^1.13.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "foundry",
    "smart-contracts",
    "solidity"
  ],
  "pnpm": {
    "patchedDependencies": {
      "@defi-wonderland/smock@2.3.5": "patches/@defi-wonderland__smock@2.3.5.patch"
    }
  }
}

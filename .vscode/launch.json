{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run all tests",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "env": {
                "TEST": "true"
            },
            "args": [
                "--require",
                "ts-node/register",
                "--require",
                "tsconfig-paths/register",
                "--inspect-brk",
                "${workspaceFolder}/src/test/**/*.ts",
                "--reporter",
                "spec",
                "--slow",
                "5000",
                "--timeout",
                "120000"
            ]
        }
    ]
}

{
  "mochaExplorer.require": [
    "ts-node/register",
    "tsconfig-paths/register"
  ],
  "mochaExplorer.files": [
    "./src/test/**/*.ts"
  ],
  "mochaExplorer.timeout": 120000,
  "mochaExplorer.multiFileSuites": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {},
  "search.exclude": {
    "**/bower_components": true,
    "**/*.code-search": true,
    "pnpm-lock.yaml": true,
    "yarn.lock": true,
    "bun.lockb": true,
    "mochawesome-report": true,
    "**/deployments/**": true,
    "node_modules/**": true,
    "docs/**/*": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.organizeImports.biome": "explicit"
    }
  },
  "editor.formatOnSave": true,
  "solidity.compiler": {
    "outDir": "build/vsc",
    "type": "Remote",
    "remote": "v0.8.23+commit.f704f362"
  },
  "solidity.project.libs": [
    "lib"
  ],
  "solidity.project.monorepo": false,
  "solidity.formatter": "prettier",
  "solidity.linter.type": "solhint",
  "solidity.linter.rules": {
    "state-visibility": "off"
  },
  "solidity.project.sources": "src/contracts",
  "solidity.validation": {
    "onChange": true,
    "onSave": false,
    "onOpen": true,
    "delay": 150
  },
  "solidity.test": {
    "executeOnSave": true,
    "verbosity": 2
  }
}
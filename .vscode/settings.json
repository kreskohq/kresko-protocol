{
  "mochaExplorer.require": [
    "ts-node/register",
    "tsconfig-paths/register"
  ],
  "mochaExplorer.files": [
    "./src/test/**/*.ts"
  ],
  "mochaExplorer.timeout": 120000,
  "mochaExplorer.multiFileSuites": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {},
  "search.exclude": {
    "**/bower_components": true,
    "**/*.code-search": true,
    "pnpm-lock.yaml": true,
    "mochawesome-report": true,
    "**/deployments/**": true,
    "packages/contracts/pnpm-lock.yaml": true,
    "node_modules/**": true,
  },
  "editor.formatOnSave": true,
  "solidity.linter": "solhint",
  "solidity.validationDelay": 350,
  "solidity.compileUsingRemoteVersion": "v0.8.19+commit.7dd6d404",
  "solidity.monoRepoSupport": false,
  "solidity.compilerPackage": "solc",
  "solidity.formatter": "prettier",
  "solidity.sources": "",
  "solidity.initExclude": ["test"],
  "solidity.libs": ["node_modules", "lib"],
  "solidity.libSources": ["src", "contracts"],
  "solidity.enabledAsYouTypeCompilationErrorCheck": false,
  "solidity.remappings": [
    "ds-test/=lib/forge-std/lib/ds-test/src/",
    "forge-std/=lib/forge-std/src/",
    "solmate/=lib/solmate/src/",
    "libs/=src/contracts/libs/",
    "diamond/=src/contracts/diamond/",
    "minter/=src/contracts/minter/",
    "vault/=src/contracts/vault/",
    "vendor/=src/contracts/vendor/",
    "scdp/=src/contracts/scdp/",
    "common/=src/contracts/common/",
    "test/=src/contracts/test/",
    "kresko-asset/=src/contracts/kresko-asset/",
    "kiss/=src/contracts/kiss/",
    "kresko-helpers/=lib/kresko-foundry-helpers/src/",
    "@openzeppelin/=node_modules/@openzeppelin/",
  ],
  "solidity.defaultCompiler": "remote",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#373a44",
    "activityBar.background": "#373a44",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#bf405d",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#373a44",
    "statusBar.background": "#202228",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#373a44",
    "statusBarItem.remoteBackground": "#202228",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#202228",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#20222899",
    "titleBar.inactiveForeground": "#e7e7e799"
  },



}

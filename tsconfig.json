{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["dom", "esnext"],
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": ["configs/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@tasks": ["src/tasks"],
      "@test/*": ["src/test/*"],
      "@scripts/*": ["src/scripts/*"],
      "@test-utils": ["src/utils/test"]
    }
  },
  "exclude": ["**/@kreskolabs/lib/**/*.d.ts", "temp", "pages", "node_modules/**/*.ts", "cache/**/*", "out"],
  "include": ["hardhat.config.ts", "types", "src", "configs"],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "swc": true,
    "esm": true
  }
}

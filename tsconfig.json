{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": [
      "dom",
      "esnext"
    ],
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/types": [
        "src/types"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@config/*": [
        "configs/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@tasks": [
        "src/tasks"
      ],
      "@test/*": [
        "src/test/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ],
      "@test-utils": [
        "src/utils/test"
      ]
    }
  },
  "exclude": [
    "temp",
    "build",
    "docs",
    "node_modules",
    "cache",
    "out",
    "lib",
    "artifacts",
    "broadcast"
  ],
  "include": [
    "hardhat.config.ts",
    "src",
    "configs",
    "utils"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "swc": true,
    "esm": true
  }
}
{
    "extends": ["solhint:recommended"],
    "plugins": ["prettier"],
    "rules": {
        "code-complexity": ["error", 7],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "avoid-tx-origin": "error",
        "compiler-version": ["error", "<=0.8.21"],
        "no-inline-assembly": ["off"],
        "prettier/prettier": "error",
        "reason-string": [
            "warn",
            {
                "maxLength": 64
            }
        ]
    }
}
